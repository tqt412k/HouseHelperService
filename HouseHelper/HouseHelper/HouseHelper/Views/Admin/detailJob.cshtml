    <!-- jQuery -->
    <script type="text/javascript">
        function remove() {
            swal({
                title: "Bạn có chắc chắn xóa đơn tuyển dụng?",
                text: "Hãy chắc chắn với quyết định của mình !",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            type: "POST",
                            url: "/Admin/deleteJob/@Model.Jobid",
                            success: function (response) {
                                swal("Bạn đã xóa đơn tuyển dụng thành công", {
                                    icon: "success",
                                }).then(function () {
                                    window.location.href = "/Admin/getAllJob"
                                });

                            },
                            failure: function (response) {
                                alert(response.responseText);
                            },
                            error: function (response) {
                                alert(response.responseText);
                            }
                        });

                    }
                    else {
                        swal("Trở về đơn tuyển dụng");
                    }
                });
        }

    </script>
